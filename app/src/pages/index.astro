---
import {
    faBlogger,
    faCss3,
    faHtml5,
    faJs,
    faVuejs,
} from "@fortawesome/free-brands-svg-icons";
import { faPaperPlane } from "@fortawesome/free-solid-svg-icons";
import svelteIcon from "@iconify/icons-simple-icons/svelte";
import Icon from "@iconify/svelte";
import Fa from "svelte-fa";
import Layout from "../layouts/Layout.astro";
import { TypewriterEffect } from "../components/typewriter";
---

<Layout title="Portfolio">
    <Fragment slot="body">
        <div
            class="flex flex-col lg:flex-row items-center w-full justify-around space-y-4 lg:space-y-0 mb-8 pb-8 border-b border-b-surface-500 dark:border-b-surface-400"
        >
            <div class="flex flex-col text-center lg:text-left gap-2">
                <h1>
                    <TypewriterEffect
                        delay={0}
                        client:visible
                        words={"Hola, mi nombre es Adan!"
                            .split(" ")
                            .map((text) => ({ text }))}
                    />
                </h1>
                <p class="text-2xl">
                    <!-- <TypewriterEffect delay={0} client:visible words={"Soy un desarrollador de aplicaciones web viviendo en España.".split(" ").map(text=>({text}))}/> -->
                    Soy un desarrollador de aplicaciones web viviendo en España.
                </p>
                <p class="text-xl mt-4">
                    Creo páginas web de cero usando las siguientes tecnologías:
                </p>
                <div
                    class="flex gap-4 justify-center lg:justify-start flex-wrap"
                >
                    <!-- <p class="badge variant-filled-primary text-lg"> <Fa icon={faPencil}/> <span>Badge</span></p> -->
                    <p class="badge variant-filled-secondary text-lg">
                        <Fa icon={faJs} />
                        <span>Javascript</span>
                    </p>
                    <p class="badge variant-filled-secondary text-lg">
                        <Fa icon={faHtml5} />
                        <span>HTML5</span>
                    </p>
                    <p class="badge variant-filled-secondary text-lg">
                        <Fa icon={faCss3} />
                        <span>CSS</span>
                    </p>
                    <p class="badge variant-filled-secondary text-lg">
                        <Icon client:visible icon={svelteIcon} />
                        <span>SvelteKit</span>
                    </p>
                    <p class="badge variant-filled-secondary text-lg">
                        <Fa icon={faVuejs} />
                        <span>Vue</span>
                    </p>
                </div>
            </div>
            <div>
                <img
                    src="/portrait.jpg"
                    alt="Portrait photo"
                    class="rounded-token aspect-[3/4] object-cover w-80 shadow-md"
                />
            </div>
        </div>

        <div class="py-8 flex justify-around flex-wrap gap-8 items-center">
            <!-- <h1>Contacta conmigo</h1> -->
            <a
                href="mailto:adanj.farina@gmail.com"
                class="btn flex w-fit variant-filled-primary items-center"
                ><h1>Contacta conmigo</h1>
                <Fa icon={faPaperPlane} size="1.75x" /></a
            >
        </div>

        <div
            class="dark:border-t-surface-400 py-8 flex justify-around flex-wrap gap-8 items-center"
        >
            <!-- <p class="font-bold text-4xl">Explora mi contenido!</p> -->
            <a
                href="/blog"
                class="btn flex w-fit variant-filled-tertiary items-center"
                ><h1>Explora mi contenido</h1>
                <Fa icon={faBlogger} size="1.75x" /></a
            >
        </div>
    </Fragment>
</Layout>
